@model IEnumerable<MaterialType>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">MaterialType List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="MaterialType" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i>&nbsp; Create New MaterialType</a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered tabletable-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td class="w-75 btn-group" role="group">
                    <a asp-controller="MaterialType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                        <i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-controller="MaterialType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

